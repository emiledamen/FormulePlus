{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "force"
  },
  "include": ["app/**/*", "lib/**/*", "data/**/*", "next-env.d.ts"],
  "exclude": ["node_modules"]
}
